<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

    <%= yield %>
    <% if flash[:alert] || flash[:notice] %>
      <hr>
      <%= flash[:alert] %>
      <%= flash[:notice] %>
    <% end %>

  </div>

</body>
</html>
